<Window x:Class="MarvinsAIRARefactored.Windows.CursorCountdownOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="48"
        Height="48"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        IsHitTestVisible="False">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0" Grid.Column="0" x:Name="RootCanvas">

            <Path x:Name="ArcPath" Stroke="Red" StrokeThickness="8" RenderOptions.EdgeMode="Aliased" />

        </Canvas>

    </Grid>

</Window>
